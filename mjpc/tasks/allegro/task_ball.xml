<mujoco model="Allegro Hand Ball Rotation">
  <include file="../common.xml"/>

  <size memory="1M"/>

  <option integrator="implicitfast" iterations="100" ls_iterations="50"/>

  <asset>
    <texture name="cube" type="cube"
             fileup="../common_assets/reorientation_cube_textures/fileup.png"
             fileback="../common_assets/reorientation_cube_textures/fileback.png"
             filedown="../common_assets/reorientation_cube_textures/filedown.png"
             filefront="../common_assets/reorientation_cube_textures/filefront.png"
             fileleft="../common_assets/reorientation_cube_textures/fileleft.png"
             fileright="../common_assets/reorientation_cube_textures/fileright.png"/>
    <material name="cube" texture="cube"/>
    <texture name="graycube" type="cube"
             fileup="../common_assets/reorientation_cube_textures/grayup.png"
             fileback="../common_assets/reorientation_cube_textures/grayback.png"
             filedown="../common_assets/reorientation_cube_textures/graydown.png"
             filefront="../common_assets/reorientation_cube_textures/grayfront.png"
             fileleft="../common_assets/reorientation_cube_textures/grayleft.png"
             fileright="../common_assets/reorientation_cube_textures/grayright.png"/>
    <material name="graycube" texture="graycube"/>
  </asset>

  <custom>
    <!-- agent -->
    <numeric name="agent_planner" data="0" />
    <numeric name="agent_horizon" data="0.5" />
    <numeric name="agent_timestep" data="0.01" />
    <numeric name="agent_policy_width" data="0.0035" />
    <numeric name="sampling_spline_points" data="6" />
    <numeric name="sampling_exploration" data="0.1" />
    <numeric name="sampling_trajectories" data="10" />
    <numeric name="sampling_representation" data="2" />
    <numeric name="robust_xfrc" data="0.004" />
    <numeric name="gradient_spline_points" data="6" />

    <!-- cem -->
    <numeric name="n_elite" data="10" />
    <numeric name="std_min" data="0.2" />
  </custom>

  <!-- Set the camera viewpoint -->
  <statistic extent="0.4" center="0.3 0.1 0"/>
  <visual>
    <quality shadowsize="8192"/>
    <global azimuth="180" elevation="-30"/>
  </visual>

  <!-- Set default friction coefficient -->
  <default>
    <geom friction=".3"/>
  </default>

  <!-- Create the scene, including floor and the interactive target ball. -->
  <worldbody>
    <light pos="0 -0.1 0.5" dir="0 0.2 -1" diffuse="0.7 0.7 0.7" specular="0.3 0.3 0.3"
        directional="true" castshadow="true"/>
    <geom name="floor" pos="0 0 -0.2" size="0 0 0.05" type="plane" material="blue_grid"/>

    <!-- Goal ball -->
    <body name="goal" pos="0.325 0.17 0.0475">
      <joint type="ball" damping="0.001"/>
      <geom type="sphere" size=".05 .05 .05" mass=".124" material="graycube" contype="0" conaffinity="0"/>
    </body>

    <!-- In-hand ball -->
    <body name="ball" pos="0.2 0.0 0.075">
      <freejoint/>
      <geom name="ball" type="sphere" size=".05 .05 .05" mass=".122" material="cube"/>
    </body>
  </worldbody>

  <sensor>
    <!-- Residuals -->
    <user name="Ball Position" dim="3" user="1 75 0 100 0.02 2"/>
    <user name="Ball Orientation" dim="3" user="0 7.5 0 10" />
    <user name="Ball Velocity" dim="3" user="0 10 0 20" />
    <user name="Actuation" dim="16" user="0 1 0.0 10" />
    <user name="Grasp" dim="16" user="0 0.1 0.0 10" />
    <user name="Joint Vel" dim="16" user="0 1.0e-3 0.0 0.1" />

    <!-- Goal ball sensors -->
    <framepos name="ball_goal_position" objtype="site" objname="grasp_site"/>
    <framequat name="ball_goal_orientation" objtype="body" objname="goal"/>
    <framepos name="trace0" objtype="body" objname="ball"/>

    <!-- In-hand ball sensors -->
    <framepos name="ball_position" objtype="body" objname="ball"/>
    <framequat name="ball_orientation" objtype="body" objname="ball"/>
    <framelinvel name="ball_linear_velocity" objtype="body" objname="ball"/>
    <frameangvel name="ball_angular_velocity" objtype="body" objname="ball"/>
  </sensor>
  
  <!-- modified from: https://github.com/google-deepmind/mujoco_menagerie/tree/main/wonik_allegro -->
  <include file="right_hand_modified.xml"/>

  <keyframe>
    <key name="home" qpos="1 0 0 0 0.2 0.025 0.075 1 0 0 0 0 0.58058 0.701595 0.538675 0 0.60767 0.758085 0.741625 0 0.8876 0.720425 0.5848 0.263 0.32612 1.08493 0.806715"/>
  </keyframe>
</mujoco>
